<Window x:Class="WpfClient.TimedGameResultDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Результат игры"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        SizeToContent="WidthAndHeight"
        ShowInTaskbar="False">

    <Border Margin="16"
            CornerRadius="22"
            Background="{DynamicResource WindowBackgroundBrush}"
            Effect="{StaticResource MediumShadow}">
        <Grid Margin="6">
            <Border CornerRadius="18"
                    Background="#F8FCFF">
                <Grid Margin="22"
                      MaxWidth="480">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Заголовок с иконкой -->
                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal">
                        <Border Width="40"
                                Height="40"
                                CornerRadius="14"
                                Background="#FFE8F5E9"
                                VerticalAlignment="Center"
                                Margin="0,0,12,0">
                            <TextBlock x:Name="ResultIcon"
                                       FontSize="22"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Border>

                        <StackPanel>
                            <TextBlock x:Name="ResultTitle"
                                       FontSize="20"
                                       FontWeight="SemiBold" />
                            <TextBlock x:Name="ResultSubtitle"
                                       FontSize="12"
                                       Foreground="{StaticResource MutedTextBrush}"
                                       Margin="0,4,0,0" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Статистика -->
                    <Grid Grid.Row="1"
                          Margin="0,16,0,12">
                        <Grid.ColumnDefinitions>
                            <!-- Текстовые показатели -->
                            <ColumnDefinition Width="*" />
                            <!-- Круг точности -->
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Левая колонка со статистикой -->
                        <Grid Margin="0,0,16,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Время раунда -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,12,8">
                                <TextBlock Text="Время раунда"
                                           FontSize="12"
                                           Foreground="{StaticResource MutedTextBrush}" />
                                <TextBlock x:Name="RoundDurationText"
                                           FontSize="18"
                                           FontWeight="SemiBold" />
                            </StackPanel>

                            <!-- Потраченное время -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="12,0,0,8">
                                <TextBlock Text="Потрачено"
                                           FontSize="12"
                                           Foreground="{StaticResource MutedTextBrush}" />
                                <TextBlock x:Name="ElapsedText"
                                           FontSize="18"
                                           FontWeight="SemiBold" />
                            </StackPanel>

                            <!-- Заполненные области -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,8,12,8">
                                <TextBlock Text="Заполнено областей"
                                           FontSize="12"
                                           Foreground="{StaticResource MutedTextBrush}" />
                                <TextBlock x:Name="RegionsText"
                                           FontSize="16"
                                           FontWeight="SemiBold" />
                            </StackPanel>

                            <!-- Точность (числом) -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="12,8,0,8">
                                <TextBlock Text="Точность"
                                           FontSize="12"
                                           Foreground="{StaticResource MutedTextBrush}" />
                                <TextBlock x:Name="AccuracyText"
                                           FontSize="16"
                                           FontWeight="SemiBold" />
                            </StackPanel>

                            <!-- Время активности / бездействия -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,10,12,0">
                                <TextBlock Text="Время в действии"
                                           FontSize="12"
                                           Foreground="{StaticResource MutedTextBrush}" />
                                <TextBlock x:Name="ActiveTimeText"
                                           FontSize="14"
                                           FontWeight="SemiBold" />
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="12,10,0,0">
                                <TextBlock Text="Бездействие"
                                           FontSize="12"
                                           Foreground="{StaticResource MutedTextBrush}" />
                                <TextBlock x:Name="IdleTimeText"
                                           FontSize="14"
                                           FontWeight="SemiBold" />
                            </StackPanel>

                            <!-- Дополнительная статистика по действиям -->
                            <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,10,12,0">
                                <TextBlock Text="Действий кистью"
                                           FontSize="12"
                                           Foreground="{StaticResource MutedTextBrush}" />
                                <TextBlock x:Name="FillActionsText"
                                           FontSize="14"
                                           FontWeight="SemiBold" />
                            </StackPanel>

                            <StackPanel Grid.Row="3" Grid.Column="1" Margin="12,10,0,0">
                                <TextBlock Text="Скорость"
                                           FontSize="12"
                                           Foreground="{StaticResource MutedTextBrush}" />
                                <TextBlock x:Name="ActionsPerMinuteText"
                                           FontSize="14"
                                           FontWeight="SemiBold" />
                            </StackPanel>
                        </Grid>

                        <!-- Правая колонка: круговая диаграмма точности -->
                        <Grid Grid.Column="1"
                              Margin="0,0,0,0"
                              HorizontalAlignment="Right">
                            <Grid Width="120" Height="120">
                                <!-- Фон круга -->
                                <Ellipse Width="120"
                                         Height="120"
                                         Stroke="#E1E6F2"
                                         StrokeThickness="10" />

                                <!-- Активная дуга -->
                                <Path x:Name="AccuracyArc"
                                      Stroke="{StaticResource AccentBrush}"
                                      StrokeThickness="10"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round" />

                                <!-- Проценты в центре -->
                                <StackPanel HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <TextBlock x:Name="AccuracyPercentText"
                                               FontSize="22"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center" />
                                    <TextBlock Text="точность"
                                               FontSize="11"
                                               Foreground="{StaticResource MutedTextBrush}"
                                               HorizontalAlignment="Center" />
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Grid>

                    <!-- Кнопки действий -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,12,0,0">
                        <Button Width="150"
                                Margin="0,0,8,0"
                                Click="OnBackToMenuClick">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="#EFF3FB"
                                            CornerRadius="10"
                                            Padding="10,4">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <TextBlock Text="Вернуться в меню"
                                       Foreground="{StaticResource MutedTextBrush}" />
                        </Button>

                        <Button Width="150"
                                Background="{StaticResource AccentBrush}"
                                Foreground="White"
                                Padding="10,4"
                                Click="OnRetryClick">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="10"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <TextBlock Text="Играть ещё раз" />
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>


