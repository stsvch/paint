<UserControl x:Class="WpfClient.Controls.PlaybackSessionItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="48">
    <Border Background="White"
            CornerRadius="8"
            Padding="12"
            Margin="0,0,0,8"
            BorderBrush="#E0E0E0"
            BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Маркер выбранной записи -->
            <TextBlock Grid.Column="0"
                       Text="▶"
                       Margin="0,0,8,0"
                       VerticalAlignment="Center"
                       Foreground="#4B9EFF">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}"
                                         Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!-- Основной текст -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="{Binding DrawingKey}"
                           FontSize="16"
                           FontWeight="SemiBold" />
                <TextBlock Text="{Binding StartedAt, StringFormat=Начало: {0:dd.MM.yyyy HH:mm:ss}}"
                           FontSize="12"
                           Foreground="#666"
                           Margin="0,4,0,0" />
                <TextBlock Text="{Binding ActionCount, StringFormat=Действий: {0}}"
                           FontSize="12"
                           Foreground="#666" />
            </StackPanel>

            <!-- Кнопка удаления -->
            <Button Grid.Column="2"
                    Content="Удалить"
                    FontSize="12"
                    Width="70"
                    Height="26"
                    Padding="0"
                    Margin="8,0,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Click="DeleteButton_Click"
                    Cursor="Hand" />
        </Grid>
    </Border>
</UserControl>
