<UserControl x:Class="WpfClient.Controls.StartMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0"
                    VerticalAlignment="Center"
                    Margin="0,12,32,12">
            <StackPanel>
                <TextBlock Text="Paint Receiver"
                           FontSize="32"
                           FontWeight="SemiBold" />
                <TextBlock Text="Рисование с джойстиком и сохранением сессий"
                           FontSize="16"
                           Foreground="{StaticResource MutedTextBrush}"
                           Margin="0,8,0,0" />
            </StackPanel>

            <TextBlock Text="Выберите режим и начните раскрашивать. Все панели и управление сохраняются — нажмите на кнопку, чтобы открыть холст."
                       FontSize="15"
                       TextWrapping="Wrap"
                       Foreground="{StaticResource MutedTextBrush}" />

            <UniformGrid Columns="2" Rows="2" Margin="0,18,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                <Border Style="{StaticResource PanelBorderStyle}" Margin="0,0,12,12">
                    <StackPanel>
                        <TextBlock Text="Режимы рисования"
                                   Style="{StaticResource PanelSectionHeaderTextStyle}" />
                        <TextBlock Text="Абсолютный и центрированный джойстик"
                                   TextWrapping="Wrap"
                                   Margin="0,6,0,0" />
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource PanelBorderStyle}" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Сохранение в БД"
                                   Style="{StaticResource PanelSectionHeaderTextStyle}" />
                        <TextBlock Text="Записывайте и просматривайте сессии"
                                   TextWrapping="Wrap"
                                   Margin="0,6,0,0" />
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource PanelBorderStyle}" Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="Цветовая палитра"
                                   Style="{StaticResource PanelSectionHeaderTextStyle}" />
                        <TextBlock Text="Выбирайте цвета из готовых пресетов"
                                   TextWrapping="Wrap"
                                   Margin="0,6,0,0" />
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource PanelBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="Подсказки по управлению"
                                   Style="{StaticResource PanelSectionHeaderTextStyle}" />
                        <TextBlock Text="Все горячие клавиши собраны в одном месте"
                                   TextWrapping="Wrap"
                                   Margin="0,6,0,0" />
                    </StackPanel>
                </Border>
            </UniformGrid>

            <StackPanel Orientation="Horizontal" Margin="0,18,0,0">
                <Button Style="{StaticResource ElevatedButtonStyle}"
                        Background="{StaticResource AccentBrush}"
                        Padding="20,10"
                        Click="OnStartClick">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Начать рисовать" FontSize="14" />
                        <TextBlock Text="→" FontSize="16" Margin="8,0,0,0" />
                    </StackPanel>
                </Button>

                <Border Background="#EFF3FB"
                        Padding="12,8"
                        CornerRadius="10"
                        Margin="12,0,0,0"
                        VerticalAlignment="Center">
                    <TextBlock Text="Можно вернуться в меню в любой момент"
                               Foreground="{StaticResource MutedTextBrush}" />
                </Border>
            </StackPanel>
        </StackPanel>

        <Border Grid.Column="1"
                Background="#FBFCFF"
                CornerRadius="28"
                Padding="24"
                Effect="{StaticResource MediumShadow}"
                VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Что доступно на холсте"
                           FontSize="18"
                           FontWeight="SemiBold" />
                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                    <Ellipse Width="14" Height="14" Fill="{StaticResource AccentBrush}" />
                    <TextBlock Text="Контур и образец рисунка рядом" FontSize="14" Margin="12,0,0,0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                    <Ellipse Width="14" Height="14" Fill="#9C27B0" />
                    <TextBlock Text="Палитра и режимы джойстика справа" FontSize="14" Margin="12,0,0,0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                    <Ellipse Width="14" Height="14" Fill="#00BCD4" />
                    <TextBlock Text="Подсказки и горячие клавиши слева" FontSize="14" Margin="12,0,0,0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                    <Ellipse Width="14" Height="14" Fill="#4CAF50" />
                    <TextBlock Text="Запись/воспроизведение сессий внизу" FontSize="14" Margin="12,0,0,0" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
