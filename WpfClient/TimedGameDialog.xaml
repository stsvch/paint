<Window x:Class="WpfClient.TimedGameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Игра на время"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        SizeToContent="WidthAndHeight"
        ShowInTaskbar="False">

    <!-- Внешняя скругленная карточка окна -->
    <Border Margin="16"
            CornerRadius="22"
            Background="{DynamicResource WindowBackgroundBrush}"
            Effect="{StaticResource MediumShadow}">
        <Grid Margin="6">
            <!-- Внутренняя карточка контента -->
            <Border CornerRadius="18"
                    Background="#F8FCFF">
                <Grid Margin="20"
                      MaxWidth="460">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Заголовок -->
                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal">
                        <Border Width="32"
                                Height="32"
                                CornerRadius="10"
                                Background="{StaticResource AccentBrush}"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0">
                            <TextBlock Text="⏱"
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Border>

                        <StackPanel>
                            <TextBlock Text="Настройка игры на время"
                                       FontSize="18"
                                       FontWeight="SemiBold" />
                            <TextBlock Text="Выберите длительность раунда перед стартом."
                                       FontSize="12"
                                       Foreground="{StaticResource MutedTextBrush}"
                                       Margin="0,4,0,0" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Текущее значение -->
                    <StackPanel Grid.Row="1"
                                Margin="0,18,0,0">
                        <TextBlock Text="Длительность раунда"
                                   FontSize="14"
                                   FontWeight="SemiBold" />
                        <Border Margin="0,6,0,0"
                                Padding="10,6"
                                CornerRadius="12"
                                Background="#FFFFFF">
                            <TextBlock x:Name="DurationText"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center" />
                        </Border>
                    </StackPanel>

                    <!-- Быстрый выбор + слайдер времени -->
                    <StackPanel Grid.Row="2"
                                Margin="0,16,0,0">
                        <TextBlock Text="Быстрый выбор"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,4" />

                        <!-- Пресеты времени -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,4,0,0">
                            <Button x:Name="Preset30Button"
                                    Tag="30"
                                    Margin="0,0,6,0"
                                    Padding="10,4"
                                    Click="OnPresetClick"
                                    Background="#EFF3FB"
                                    Foreground="{StaticResource MutedTextBrush}"
                                    BorderThickness="0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="10"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <TextBlock Text="00:30" />
                            </Button>

                            <Button x:Name="Preset60Button"
                                    Tag="60"
                                    Margin="0,0,6,0"
                                    Padding="10,4"
                                    Click="OnPresetClick"
                                    Background="#EFF3FB"
                                    Foreground="{StaticResource MutedTextBrush}"
                                    BorderThickness="0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="10"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <TextBlock Text="01:00" />
                            </Button>

                            <Button x:Name="Preset180Button"
                                    Tag="180"
                                    Margin="0,0,6,0"
                                    Padding="10,4"
                                    Click="OnPresetClick"
                                    Background="#EFF3FB"
                                    Foreground="{StaticResource MutedTextBrush}"
                                    BorderThickness="0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="10"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <TextBlock Text="03:00" />
                            </Button>

                            <Button x:Name="Preset300Button"
                                    Tag="300"
                                    Padding="10,4"
                                    Click="OnPresetClick"
                                    Background="#EFF3FB"
                                    Foreground="{StaticResource MutedTextBrush}"
                                    BorderThickness="0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="10"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <TextBlock Text="05:00" />
                            </Button>
                        </StackPanel>

                        <TextBlock Text="Или задайте своё время"
                                   FontSize="11"
                                   Foreground="{StaticResource MutedTextBrush}"
                                   Margin="0,14,0,4" />

                        <Slider x:Name="DurationSlider"
                                Minimum="30"
                                Maximum="300"
                                Value="60"
                                TickFrequency="30"
                                IsSnapToTickEnabled="True"
                                ValueChanged="OnDurationChanged" />
                    </StackPanel>

                    <!-- Кнопки -->
                    <StackPanel Grid.Row="3"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,20,0,0">
                        <Button Width="110"
                                Margin="0,0,8,0"
                                Click="OnCancelClick">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="#EFF3FB"
                                            CornerRadius="10"
                                            Padding="10,4">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <TextBlock Text="Отмена"
                                       Foreground="{StaticResource MutedTextBrush}" />
                        </Button>

                        <Button Width="150"
                                Background="{StaticResource AccentBrush}"
                                Foreground="White"
                                Padding="10,4"
                                Click="OnStartClick">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="10"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <TextBlock Text="Начать игру" />
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>


