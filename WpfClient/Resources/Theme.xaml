<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Brushes -->
    <LinearGradientBrush x:Key="WindowBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#F7F9FC" Offset="0" />
        <GradientStop Color="#E3EAF7" Offset="1" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="CardBackgroundBrush" Color="White" />
    <SolidColorBrush x:Key="MutedTextBrush" Color="#5C6475" />
    <SolidColorBrush x:Key="AccentBrush" Color="#4B9EFF" />

    <!-- Effects -->
    <DropShadowEffect x:Key="MediumShadow" BlurRadius="16" ShadowDepth="4" Opacity="0.25" />
    <DropShadowEffect x:Key="SoftShadow" BlurRadius="12" ShadowDepth="2" Opacity="0.18" />

    <!-- Converters -->
    <BooleanToVisibilityConverter x:Key="BoolToVisibility" />

    <!-- Typography -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="#1F2430" />
        <Setter Property="FontFamily" Value="Segoe UI" />
    </Style>

    <!-- Shared containers -->
    <Style x:Key="CardBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}" />
        <Setter Property="CornerRadius" Value="28" />
        <Setter Property="Padding" Value="32" />
        <Setter Property="Effect" Value="{StaticResource MediumShadow}" />
    </Style>

    <Style x:Key="PanelBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="#F7F9FD" />
        <Setter Property="CornerRadius" Value="18" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Effect" Value="{StaticResource SoftShadow}" />
    </Style>

    <!-- Buttons -->
    <Style x:Key="ElevatedButtonStyle" TargetType="Button">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="10"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Palette -->
    <Style x:Key="PaletteItemContainerStyle" TargetType="ListBoxItem">
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="Margin" Value="0,0,8,8" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
    </Style>

    <DataTemplate x:Key="PaletteItemTemplate">
        <Border Height="48"
                Width="48"
                Background="{Binding Brush}"
                CornerRadius="8"
                ToolTip="{Binding Name}"
                Effect="{StaticResource SoftShadow}">
            <Border.BorderBrush>
                <SolidColorBrush Color="#33000000" />
            </Border.BorderBrush>
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="BorderThickness" Value="2" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                            <Setter Property="BorderBrush" Value="#FF4B9EFF" />
                            <Setter Property="BorderThickness" Value="4" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
        </Border>
    </DataTemplate>

    <!-- Scrollbars -->
    <Style x:Key="ThinScrollRepeatButtonStyle" TargetType="RepeatButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RepeatButton">
                    <Border Width="0" Height="0" Background="Transparent" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ThinScrollBarStyle" TargetType="ScrollBar">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Grid Background="Transparent">
                        <Border x:Name="TrackBackground"
                                Background="#E2E8F5"
                                CornerRadius="4"
                                Opacity="0.6" />
                        <Track x:Name="PART_Track"
                               Orientation="{TemplateBinding Orientation}">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Command="{x:Static ScrollBar.LineUpCommand}"
                                              Style="{StaticResource ThinScrollRepeatButtonStyle}"
                                              IsTabStop="False" />
                            </Track.DecreaseRepeatButton>
                            <Track.IncreaseRepeatButton>
                                <RepeatButton Command="{x:Static ScrollBar.LineDownCommand}"
                                              Style="{StaticResource ThinScrollRepeatButtonStyle}"
                                              IsTabStop="False" />
                            </Track.IncreaseRepeatButton>
                            <Track.Thumb>
                                <Thumb Background="#5D8DEE"
                                       Opacity="0.9">
                                    <Thumb.Template>
                                        <ControlTemplate TargetType="Thumb">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4" />
                                        </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Orientation" Value="Vertical">
                            <Setter TargetName="TrackBackground" Property="Width" Value="8" />
                            <Setter Property="Width" Value="8" />
                        </Trigger>
                        <Trigger Property="Orientation" Value="Horizontal">
                            <Setter TargetName="TrackBackground" Property="Height" Value="8" />
                            <Setter Property="Height" Value="8" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>

